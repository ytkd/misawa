TARGET=MISAWA.EXE
DLL=MHOOK.DLL
ASM=WASM
CC	= WCC386
RC	= WRC
HC	= HC31
DISASM	= WDIS
LNK	= WLINK

ODIR=OBJ\

INCLUDE=$(WC)\H;$(WC)\H\NT

COPTS = -zk0 -bt=nt -mf

DEFINES	=
RESFLAGS=  -r
OBJS	= &
	$(ODIR)MISAWA.OBJ&
	$(ODIR)WAVE.OBJ&
	$(ODIR)MISC.OBJ

DLL_OBJS = &
	$(ODIR)MHOOK.OBJ

LINK_OBJS = &
	$(ODIR)MISAWA,&
	$(ODIR)WAVE,&
	$(ODIR)MISC

DLL_LINK_OBJS = &
	$(ODIR)MHOOK

RES=$(ODIR)MISAWA.RES

LINK_FLAGS= NAME $(TARGET) &
	LIBP $(WC)\lib386;$(WC)\lib386\nt &
	LANG JA &
	FORM WINDOWS NT RU WIN=4.0 &
	SORT COMMIT HEAP=1M COMMIT STACK=4K &
	OP STACK=4M,HEAPSIZE=4M,Map=MAPFILE.TXT,EL,&
	RES=$(ODIR)MISAWA.RES,ALIGNMENT=512,OBJA=4096, &
	DE Misawa,VERS=1.0, &
	MODN=TS,VERBOSE,STATICS

DLL_LINK_FLAGS= NAME $(DLL) &
	LIBP $(WC)\lib386;$(WC)\lib386\nt &
	LANG JA &
	SYS NT_DLL &
	SEGMENT TYPE DATA SHARED &
	EXPORT InstallHook='_InstallHook@8', UninstallHook='_UninstallHook@0'
	SORT COMMIT HEAP=1M COMMIT STACK=4K &
	OP STACK=4M,HEAPSIZE=4M,Map=MAPDLL.TXT,EL, &
	ALIGNMENT=512,OBJA=4096, &
	DE MHOOK,VERS=1.0 &
	MODN=MHOOK,VERBOSE,STATICS


LINK_LIBS= LIB kernel32,user32,gdi32,shell32,winmm
DLL_LINK_LIBS= LIB kernel32,user32

OPTION =

!ifdef D
CFLAGS = -D_DEBUG -3r -d2 -db -hd -s -w=4
LINK_OPTS= DEBUG DWARF
DLL_LINK_OPTS= DEBUG DWARF
!else
CFLAGS = -DRELEASE -5r -oabhkrs -s -w=4 -d0
LINK_OPTS = OP NOD,NOR,START='Entry_'
DLL_LINK_OPTS = OP NOD,START='_DllEntryPoint@12'
!endif

.EXTENSIONS:
.EXTENSIONS: .exe .lib .obj .asm .c .cpp .res .rc .h

.c.obj:
	$(CC) -i=$(INCLUDE) $(COPTS) $(CFLAGS) $(OPTION) -fo$@ $[@

.asm.obj:
	$(ASM) $(AFLAGS) -fo$@ $[@

.rc.res:
	$(RC) $(RCDEFINES) $(RESFLAGS) -i=$(INCLUDE) -fo$@ $[@

all :: $(TARGET) $(DLL)


$(TARGET): $(OBJS) $(RES)
	SET WATCOM=$(WC)
	-del $(TARGET)
	$(LNK) @<<
	$(LINK_FLAGS)
	$(LINK_OPTS)
	FILE $(LINK_OBJS)
	$(LINK_LIBS)
<<
	SET WATCOM=

$(DLL): $(DLL_OBJS)
	SET WATCOM=$(WC)
	-del $(DLL)
	$(LNK) @<<
	$(DLL_LINK_FLAGS)
	$(DLL_LINK_OPTS)
	FILE $(DLL_LINK_OBJS)
	$(DLL_LINK_LIBS)
<<
	SET WATCOM=

